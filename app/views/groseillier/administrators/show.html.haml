= page_header @administrator.nickname

= render @administrator

= actions do
  = render_navigation context: 'groseillier', :items => [{key: :edit,
                                                          name: t('actions.edit'),
                                                          url: edit_administrator_path},
                                                         {key: :delete,
                                                          name: t('actions.destroy'),
                                                          url: administrator_path(@administrator),
                                                          options: { method: :delete, :'data-confirm' => t('actions.destroy_confirm') }}]

= page_footer do
  = link_to t('navigation.back'), administrators_path
